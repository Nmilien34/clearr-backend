{
  "info": {
    "name": "Clearr API",
    "description": "Complete API collection for Clearr backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/send-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "send-otp"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+1234567890\",\n  \"otpCode\": \"123456\",\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verify-otp"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Get User Modes",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}/modes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}", "modes"]
            }
          }
        },
        {
          "name": "Create Mode",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Professional\",\n  \"description\": \"For workplace communication\",\n  \"isDefault\": true,\n  \"prompt\": \"Make messages professional and clear\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}/modes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}", "modes"]
            }
          }
        }
      ]
    },
    {
      "name": "Translations",
      "item": [
        {
          "name": "Create Translation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"translationInput\": \"I'm so angry about this situation!\",\n  \"modeId\": \"optional_mode_id\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/translations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "translations"]
            }
          }
        },
        {
          "name": "Get Translation History",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/translations/history/{{userId}}?limit=20&skip=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "translations", "history", "{{userId}}"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "skip",
                  "value": "0"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}